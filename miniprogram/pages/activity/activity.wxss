page {
  background-color: #ffffff;
  position: relative;
  height: 100vh;
  overflow: hidden;
}

.ac-page {
  position: relative;
}

.header {
  overflow: hidden;
  height: 100%;
  position: relative;
  width: 750rpx;
  box-sizing: border-box;
  display: flex;
  align-items: center;
}

.back {
  width: 48rpx;
  height: 48rpx;
  position: absolute;
  top: 0;
  left: 40rpx;
  bottom: 0;
  margin: auto;
}

.title {
  color: #ffffff;
  display: block;
  width: 100%;
  font-size: 16px;
  font-weight: 600;
  margin-left: 120rpx;
  height: 48rpx;
  line-height: 48rpx;
}

.bg {
  position: absolute;
  width: 750rpx;
  height: 1341rpx;
  left: 0;
  top: 0;
  z-index: -1;
}

.head {
  position: relative;
  width: 750rpx;
  height: 520rpx;
  z-index: 0;
}

.head-img {
  width: 750rpx;
  height: 520rpx;
  position: absolute;
  left: 0;
  top: 0;
}

.head-btn {
  position: absolute;
  width: 170rpx!important;
  height: 60rpx!important;
  min-height: auto!important;
  background: #BDEAFB;
  border-bottom-left-radius: 30rpx;
  border-top-left-radius: 30rpx;
  border-bottom-right-radius: 0;
  border-top-right-radius: 0;
  color: #ffffff;
  padding-top: 0;
  padding-bottom: 0;
  padding-right: 0;
  padding-left: 40rpx;
  flex: 1;
  display: flex;
  align-items: center;
  font-size: 28rpx;
  box-sizing: border-box;
  right: 0;
  box-shadow: 0rpx 4rpx 6rpx 0rpx rgba(28, 42, 56, 0.2);
  font-weight: 400;
}

.head-btn__share {
  top: 234rpx;
}

.head-btn__rule {
  top: 310rpx;
}

.head-text {
  position: absolute;
  color: #ffffff;
  left: 15rpx;
  font-size: 28rpx;
  top: 382rpx;
}

.activity-status {
  padding: 12rpx 36rpx;
  text-align: center;
  background-color: #FF7854;
  color: #ffffff;
  font-size: 28rpx;
  border-bottom-left-radius: 16rpx;
  border-bottom-right-radius: 16rpx;
}


.list {
  background-color: rgba(255, 255, 255, .95);
  width: 721rpx;
  box-sizing: border-box;
  margin: auto;
  border-radius: 10px;
  position: absolute;
  top: 442rpx;
  left: 0;
  right: 0;
  text-align: center;
}

.item {
  display: flex;
  align-items: center;
  height: 108rpx;
  width: 721rpx;
}

.ranking-num {
  width: 87rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.ranking-num-img {
  width: 33rpx;
  height: 40rpx;
}

.ranking-num-text {
  font-size: 33rpx;
  font-weight: 400;
  color:rgba(204,204,204,1);
}

.avartar {
  width: 60rpx;
  height: 60rpx;
  margin-left: 10rpx;
  border-radius: 30rpx;
}

.nickname, .footer-nickname {
  font-size: 32rpx;
  font-weight:400;
  color:rgba(51,51,51,1);
  width: 370rpx;
  margin-left: 32rpx;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}

.grade {
  display: flex;
  align-items: center;
  margin-left: 10rpx;
}

.grade-img {
  width: 33rpx;
  height: 31rpx;
}

.grade-text {
  font-size:33rpx;
  font-weight:600;
  color:rgba(254,231,1,1);
  margin-left: 20rpx;
}

.footer {
  position: absolute;
  bottom: 0;
  height: 108rpx;
  background: rgba(193,234,251,1);
  display: flex;
  width: 100%;
  align-items: center;
  box-sizing: border-box;
  padding: 0 80rpx;
  justify-content: space-around;
}

.footer-ranking {
  color: #ffffff;
  font-size: 34rpx;
  font-weight: 700;
}

.footer-avartar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 30rpx;
  overflow: hidden;
}

.footer-nickname {
  color:#ffffff;
  width: 260rpx;
  margin-left: 0;
}

.chat {
  position: absolute;
  right: 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  bottom: 120rpx;
}

.chat-img {
  width: 64rpx;
  height: 64rpx;
}

.chat-text {
  font-size: 28rpx;
  margin-top: 16rpx;
}

.chat-toast {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.chat-toast__img {
  width: 320rpx;
  height: 320rpx;
}

.chat-toast__text {
  margin-top: 32rpx;
  font-size: 28rpx;
}

.blank {
  display: flex;
  flex-direction: column;
  height: 30vh;
  width: 100%;
  align-items: center;
  justify-content: center;
}

.blank-img {
  width: 178rpx;
  height: 133rpx;
}

.blank-text {
  margin-top: 48rpx;
  color: rgba(153, 153, 153, 1);
  font-size: 28rpx;
  font-weight: 500;
}